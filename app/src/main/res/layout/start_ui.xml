<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:elevation="3dp"
    tools:openDrawer="start">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mt2.materialtest2.MainActivity"
        android:background="@drawable/bg">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_bottom"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="true"
            android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCard2"
                    android:onClick="card2clicked"
                    android:orientation="vertical"
                    android:gravity="fill"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/know"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_know2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom"
                        android:text="Know Your Data"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCard2"
                    android:onClick="card3clicked"
                    android:orientation="vertical"
                    android:layout_gravity="fill"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/ic_database"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_database" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom"
                        android:text="View Database"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card1"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/card_bottom"
            android:background="@drawable/card_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/top_bar"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Activity:"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_marginLeft="10dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_date"
                    android:textSize="17dp"
                    android:layout_toRightOf="@+id/activity"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:textColor="#EEEEEE"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_time"
                    android:textSize="17dp"
                    android:layout_toRightOf="@+id/text_date"
                    android:layout_marginLeft="5dip"
                    android:layout_gravity="center_vertical"
                    android:textColor="#EEEEEE"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_bar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:fitsSystemWindows="true"
                            android:layout_marginTop="9dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/box1"
                                android:layout_weight="1"
                                android:padding="2dip"
                                android:gravity="fill"
                                android:layout_gravity="fill"
                                android:orientation="vertical"
                                android:layout_marginRight="7dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/temp"
                                    android:text=" Temperature"
                                    android:gravity="top"
                                    android:textColor="@color/cardtextcolor"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tempval"
                                    android:textSize="30dp"
                                    android:textColor="#ffffff"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="0dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Â°C"
                                    android:textSize="12sp"
                                    android:textColor="@color/unitscolor"
                                    android:layout_gravity="right"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="2dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/box2"
                                android:layout_weight="1"
                                android:padding="2dip"
                                android:layout_marginLeft="7dp"
                                android:orientation="vertical"
                                android:layout_gravity="fill"
                                android:gravity="fill">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/av"
                                    android:text=" Dust Density"
                                    android:gravity="top"
                                    android:textColor="@color/cardtextcolor"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/avval"
                                    android:textSize="30dp"
                                    android:textColor="#ffffff"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="0dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Âµg/m3"
                                    android:textSize="12sp"
                                    android:textColor="@color/unitscolor"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"/>

                            </LinearLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:fitsSystemWindows="true"
                            android:layout_marginTop="14dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/box3"
                                android:padding="2dip"
                                android:layout_weight="1"
                                android:layout_marginRight="7dp"
                                android:layout_gravity="fill"
                                android:gravity="fill"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/humid"
                                    android:text=" Relative Humidity"
                                    android:gravity="top"
                                    android:textColor="@color/cardtextcolor"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/humidval"
                                    android:textSize="30dp"
                                    android:textColor="#ffffff"
                                    android:layout_below="@+id/humid"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="3dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/box4"
                                android:padding="2dip"
                                android:layout_weight="1"
                                android:layout_marginLeft="7dp"
                                android:layout_gravity="fill"
                                android:gravity="fill"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/pm10"
                                    android:text=" Pressure"
                                    android:gravity="top"
                                    android:textColor="@color/cardtextcolor"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/pm10val"
                                    android:textSize="30dp"
                                    android:textColor="#ffffff"
                                    android:layout_below="@+id/pm10"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="3dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="atm"
                                    android:textSize="12sp"
                                    android:textColor="@color/unitscolor"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="2dp"
                                    android:layout_marginBottom="2dp"/>

                            </LinearLayout>

                        </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:fitsSystemWindows="true"
                        android:layout_marginTop="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/box5"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:layout_marginRight="7dp"
                            android:layout_gravity="fill"
                            android:gravity="fill"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/pm25"
                                android:text=" Altitude"
                                android:gravity="top"
                                android:textColor="@color/cardtextcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/pm25val"
                                android:textSize="30dp"
                                android:textColor="#ffffff"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m"
                                android:textSize="12sp"
                                android:textColor="@color/unitscolor"
                                android:layout_gravity="right"
                                android:layout_marginRight="2dp"
                                android:layout_marginBottom="2dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/box6"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            android:layout_gravity="fill"
                            android:gravity="fill">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/no2"
                                android:text=" Methane"
                                android:gravity="top"
                                android:textColor="@color/cardtextcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/no2val"
                                android:textSize="30dp"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:textSize="12sp"
                                android:textColor="@color/unitscolor"
                                android:layout_gravity="right"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:fitsSystemWindows="true"
                        android:layout_marginTop="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/box7"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:layout_marginRight="7dp"
                            android:orientation="vertical"
                            android:layout_gravity="fill"
                            android:gravity="fill">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/o3"
                                android:text=" O3"
                                android:gravity="top"
                                android:textColor="@color/cardtextcolor"
                                android:textSize="15dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/o3val"
                                android:textSize="30dp"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:textSize="12sp"
                                android:textColor="@color/unitscolor"
                                android:layout_gravity="right"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/box8"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            android:layout_gravity="fill"
                            android:gravity="fill">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/co"
                                android:text=" CO"
                                android:gravity="top"
                                android:textColor="@color/cardtextcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/coval"
                                android:textSize="30dp"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:textSize="12sp"
                                android:textColor="@color/unitscolor"
                                android:layout_gravity="right"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:fitsSystemWindows="true"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/box9"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:layout_marginRight="7dp"
                            android:orientation="vertical"
                            android:layout_gravity="fill"
                            android:gravity="fill">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/so2"
                                android:text=" H2S"
                                android:gravity="top"
                                android:textColor="@color/cardtextcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/so2val"
                                android:textSize="30sp"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:textSize="12sp"
                                android:textColor="@color/unitscolor"
                                android:layout_gravity="right"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/box10"
                            android:padding="2dip"
                            android:layout_weight="1"
                            android:layout_marginLeft="7dp"
                            android:orientation="vertical"
                            android:layout_gravity="fill"
                            android:gravity="fill">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/nh3"
                                android:text=" NH3"
                                android:gravity="top"
                                android:textColor="@color/cardtextcolor"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/nh3val"
                                android:textSize="30dp"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="3dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ppm"
                                android:textSize="12sp"
                                android:textColor="@color/unitscolor"
                                android:layout_gravity="right"
                                android:layout_marginBottom="2dp"
                                android:layout_marginRight="2dp"/>

                        </LinearLayout>

                    </LinearLayout>


                    </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_width="220dp"
        app:menu="@menu/navigation_menu"
        android:background="#EF9A9A">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
